<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Votify</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body class="d-flex flex-column vh-100 position-relative">

    <%- include('../partials/navbar.ejs'); %> 

    <main class="justify-self-center">
        <div class="container-fluid mt-3">
        <div class="container d-flex ">
            <div class="mx-auto mb-3 col-12 col-md-9 col-lg-6">
                <%- include('../partials/flash.ejs'); %> 
                <div class="my-5"></div>
                <%- body %>
            </div>
        </div>
        </div>
    </main>


    <%- include('../partials/footer.ejs') %> 
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/index.js"></script>
    <script>
        const poll_form = document.getElementById('poll_search_form');
        const input = document.getElementById('poll_id');

        poll_form.addEventListener('submit', (e)=>{
            e.preventDefault();
            poll_form.setAttribute('action',poll_form.getAttribute('action') + `${input.value}`);
            window.location.replace(poll_form.getAttribute('action'));
        });
    </script>
</body>
</html>